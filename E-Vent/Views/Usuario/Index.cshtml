
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Erro"] != null)
{
    <div class="col-md-12">
        <div class="alert alert-danger alert-border alert-dismissible fade in" role="alert">
            <h3>
                @TempData["Erro"].ToString()
                <button type="button" class="close pull-right" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
            </h3>
        </div>
    </div>
}

<div class="col-lg-12" style="padding:20px;padding-bottom:20px;">
    <div class="panel">
        <div class="panel-heading">
            <h3>Logar-se</h3>
        </div>
        <div class="panel-body">
            <form action="/Usuario/Index" id="signupForm" method="post">
                <div class="col-md-12">
                    <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="email" class="form-text" id="Email" name="Email" required>
                        <span class="bar"></span>
                        <label>E-mail*</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group form-animate-text">
                        <input type="password" class="form-text" id="Senha" name="Senha" required>
                        <span class="bar"></span>
                        <label>Senha*</label>
                    </div>
                </div>

                <div class="col-md-12" style="margin-top:5px !important;">
                    <input class="submit btn btn-primary btn-block btn-lg" type="submit" value="Entrar">
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles{

}

@section Scripts{
    <script src="~/Content/asset/js/jquery.mask.js"></script>
    <script src="~/Content/asset/js/plugins/jquery.validate.min.js"></script>

    <script type="text/javascript">
        $("#signupForm").validate({
            errorElement: "em",
            errorPlacement: function (error, element) {
                $(element.parent("div").addClass("form-animate-error"));
                error.appendTo(element.parent("div"));
            },
            success: function (label) {
                $(label.parent("div").removeClass("form-animate-error"));
            },
            rules: {
                Senha: {
                    required: true,
                },
                Email: {
                    required: true,
                    email: true
                }
            },
            messages: {
                Senha: {
                    required: "Por favor, insira sua senha!"
                },
                Email: "Por favor insira um endereço de e-mail válido!"
            }
        });
    </script>
}